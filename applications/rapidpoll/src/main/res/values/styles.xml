<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_top_purple</item>
        <item name="colorPrimaryDark">@color/actionbar_top_purple</item>
        <item name="colorAccent">@color/actionbar_top_purple</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionBarStyle">@style/RapidPollActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/RapidPollActionBar</item>
        <item name="android:textViewStyle">@style/RapidPollTextView</item>
        <item name="android:editTextStyle">@style/RapidPollNormalEditText</item>
        <item name="android:alertDialogTheme">@style/RapidPollAlertDialogTheme</item>
    </style>

    <style name="RapidPollTextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RapidPollNormalEditText" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>

    </style>

    <style name="RapidPollEditText" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NewPollListQuestionEditText" parent="RapidPollEditText">
        <item name="android:background">@color/listitem_question_purple</item>
    </style>

    <style name="NewPollListAnswerEditText" parent="RapidPollEditText">
        <item name="android:background">@color/listitem_answer_purple</item>
    </style>

    <style name="CommentBox" parent="RapidPollEditText">
        <item name="android:background">@drawable/comment_box</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RapidPollActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_gradient</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_gradient</item>
    </style>

    <style name="RapidPollAlertDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

    </style>

    <style name="BottomBarButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/bottombar_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SortByTextButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/sortby_button</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
