<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/newpoll_listitem_height"
    android:background="@android:color/transparent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/answer_textview"
        android:layout_width="0dp"
        android:paddingLeft="@dimen/general_left_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="answer" />
    <ImageView
        android:id="@+id/color_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:src="@drawable/users"
        android:layout_margin="@dimen/general_right_padding" />

    <TextView
        android:id="@+id/percentage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="22%" />
</LinearLayout>