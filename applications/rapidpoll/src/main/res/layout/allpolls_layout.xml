<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_dark_purple">

    <LinearLayout
        android:id="@+id/navButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="1dp">

        <Button
            android:id="@+id/polls_button"
            style="@style/BottomBarButton"
            android:background="@color/light_purple_button"
            android:text="@string/polls"/>

        <Button
            android:id="@+id/results_button"
            style="@style/BottomBarButton"
            android:text="@string/results"
            />

        <Button
            android:id="@+id/my_polls_button"
            style="@style/BottomBarButton"
            android:text="@string/my_polls"/>
    </LinearLayout>

    <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
        android:id="@+id/paging_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navButtonsLayout"
        android:background="@color/background_dark_purple"
        android:divider="@android:color/black"
        android:listDivider="@drawable/actionbar_gradient"
        android:scrollbars="none"/>
</RelativeLayout>