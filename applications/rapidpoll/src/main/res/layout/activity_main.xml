<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_purple"
    android:orientation="vertical"
    tools:context="com.appsball.selfiemeter.SelfieMeterMainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/actionbar_gradient"
        android:elevation="4dp"
        android:logo="@drawable/logo_s"
        android:theme="@style/AppTheme"
        app:navigationIcon="?homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <EditText
            android:id="@+id/titleEditText"
            style="@style/RapidPollEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="25"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:visibility="gone"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/informationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registering_message"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ProgressBar
        android:id="@+id/registrationProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MergeRootFrame"/>

</LinearLayout>

