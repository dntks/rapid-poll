<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_blue" >

    <TextView
        android:id="@+id/choice_id_text"
        style="@style/FBTextView.White"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/page_padding"
        android:gravity="bottom"
        android:text="A" />

    <EditText
        android:id="@+id/answer_edit_text"
        style="@style/FBEditText"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:hint="@string/alternative_text" />

    <Button
        android:id="@+id/delete_answer_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/button_white"
        android:text="X"
        android:textColor="@color/white_button_text_color"
        android:textSize="@dimen/mid_text"
        android:visibility="invisible" />

</LinearLayout>