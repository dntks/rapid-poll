<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_rate_timeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin" >
        </TextView>

        <TextView
            android:id="@+id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/answers_margin"
            android:textSize="@dimen/big_text"
            android:textStyle="bold" >
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/background_blue"
            android:padding="@dimen/page_padding" >

            <LinearLayout
                android:id="@+id/linearlayout_vote_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/vote_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/edit_answer"
                style="@style/FBMarginedEditText"
                android:layout_below="@id/linearlayout_vote_answers"
                android:hint="@string/rate_answer_hint" />

            <EditText
                android:id="@+id/edit_email"
                style="@style/FBMarginedEditText"
                android:layout_below="@id/edit_answer"
                android:hint="@string/name_or_email_hint"
                android:inputType="textEmailAddress"
                android:maxLength="60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_email"
                android:layout_marginTop="@dimen/default_margin" >

                <Button
                    android:id="@+id/button_cancel_vote"
                    style="@style/FBButtonStyle"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@android:string/cancel"
                    android:textSize="@dimen/mid_text" />

                <Button
                    android:id="@+id/button_send_vote"
                    style="@style/FBButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/ok"
                    android:textSize="@dimen/mid_text" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView><!-- From: file:/D:/amunka/appsball/AppsballProject/applications/votenow/src/main/res/layout/votepage.xml -->