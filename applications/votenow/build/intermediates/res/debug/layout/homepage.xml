<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/page_padding" >

            <TextView
                android:id="@+id/votenowText"
                style="@style/FBTextView"
                android:text="@string/vote_now" />

            <Button
                android:id="@+id/button_rate_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/votenowText"
                android:background="@drawable/button_blue"
                android:text="@string/ok"
                android:textColor="@color/blue_button_text_color" />

            <EditText
                android:id="@+id/edit_code"
                style="@style/FBEditText.OnWhite"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/votenowText"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_toLeftOf="@id/button_rate_now"
                android:hint="@string/code"
                android:inputType="number" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/background_blue"
            android:padding="@dimen/page_padding" >

            <TextView
                android:id="@+id/pollText"
                style="@style/FBTextView.White"
                android:text="@string/create_poll" />

            <LinearLayout
                android:id="@+id/checkbox_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pollText"
                android:layout_marginTop="@dimen/default_margin" >

                <CheckBox
                    android:id="@+id/anonym_checkbox"
                    style="@style/CheckBoxStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/anonym" />

                <CheckBox
                    android:id="@+id/multichoice_checkbox"
                    style="@style/CheckBoxStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="@string/multichoice" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_question"
                style="@style/FBMarginedEditText"
                android:layout_below="@id/checkbox_layout"
                android:hint="@string/questiontobevoted"
                android:maxLength="500" />

            <LinearLayout
                android:id="@+id/answersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_question"
                android:layout_marginTop="@dimen/default_margin"
                android:orientation="vertical" >

                <include
                    android:id="@+id/firstAnswer"
                    layout="@layout/answer_edit_row" />

                <include
                    android:id="@+id/secondAnswer"
                    layout="@layout/answer_edit_row" />

                <Button
                    android:id="@+id/add_answer_button"
                    style="@style/FBButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:text="@string/add_answer"
                    android:textSize="@dimen/mid_text" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_email"
                style="@style/FBMarginedEditText"
                android:layout_below="@id/answersLayout"
                android:hint="@string/emailhint"
                android:inputType="textEmailAddress"
                android:maxLength="60" />

            <LinearLayout
                android:id="@+id/starttime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_email"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/start_time_text"
                    style="@style/FBTextView.White"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/start_time"
                    android:textSize="@dimen/mid_text" />

                <Button
                    android:id="@+id/starttime_datepicker"
                    style="@style/FBButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:minWidth="0dp"
                    android:layout_weight="1"
                    android:text="2015.03.15"
                    android:textSize="@dimen/mid_text" />

                <Button
                    android:id="@+id/starttime_timepicker"
                    style="@style/FBButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:minWidth="0dp"
                    android:padding="10dp"
                    android:text="15:00"
                    android:textSize="@dimen/mid_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endtime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/starttime_layout"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/end_time_text"
                    style="@style/FBTextView.White"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/end_time"
                    android:textSize="@dimen/mid_text" />

                <Button
                    android:id="@+id/endtime_datepicker"
                    style="@style/FBButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:minWidth="0dp"
                    android:layout_weight="1"
                    android:text="2015.03.15"
                    android:textSize="@dimen/mid_text" />

                <Button
                    android:id="@+id/endtime_timepicker"
                    style="@style/FBButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:minWidth="0dp"
                    android:padding="10dp"
                    android:text="15:00"
                    android:textSize="@dimen/mid_text" />
            </LinearLayout>

            <Button
                android:id="@+id/button_question_add"
                style="@style/FBButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_below="@id/endtime_layout"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/default_margin"
                android:padding="5dp"
                android:text="@string/sendvotecode"
                android:textSize="@dimen/mid_text" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView><!-- From: file:/D:/amunka/appsball/AppsballProject/applications/votenow/src/main/res/layout/homepage.xml -->